{% extends 'base.html.twig' %}

{% block title %}Tarea index{% endblock %}

{% block body %}
    <h1>Tarea index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Descripcion</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Tipo</th>
                <th>Estado</th>
                <th>Progreso</th>
                <th>Created</th>
                <th>Updated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tarea in tareas %}
            <tr>
                <td>{{ tarea.id }}</td>
                <td>{{ tarea.titulo }}</td>
                <td>{{ tarea.descripcion }}</td>
                <td>{{ tarea.inicio ? tarea.inicio|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tarea.fin ? tarea.fin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tarea.tipo }}</td>
                <td>{{ tarea.estado }}</td>
                <td>{{ tarea.progreso }}</td>
                <td>{{ tarea.created ? tarea.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tarea.updated ? tarea.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('tarea_show', {'id': tarea.id}) }}">show</a>
                    <a href="{{ path('tarea_edit', {'id': tarea.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tarea_new') }}">Create new</a>
{% endblock %}
