{% if etiquetas %}
    <div class="col-span-2">
        <h3 class="text-lg leading-10 text-green-900 font-light p-4">
            Etiquetas
        </h3>

        <div class="w-full mb-2 flex flex-wrap">
            {% for etiqueta in etiquetas %}
                <div class="m-2 p-2 border bg-green-300 text-gray-900">
                    {{ etiqueta }}
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}