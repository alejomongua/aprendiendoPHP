{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="container mx-auto my-4">
    <h1 class="text-4xl leading-10 text-green-900 font-light p-4">
        Por favor identifíquese
    </h1>
</div>
<div class="w-full md:w-3/4 lg:w-1/2 xl:w-1/3 mx-auto">
    <form method="post" class="py-4 px-10 border bg-green-100 border-green-900 rounded shadow my-4">
        <div class="my-4 font-semibold">
            <label for="inputUsername" class="block m-4 leading-10">Nombre de usuario</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="border-2 rounded shadow border-gray-700 p-2" required autofocus>
        </div>
        <div class="my-4 font-semibold">
            <label for="inputPassword" class="block px-2 leading-10">Contraseña</label>
            <input type="password" name="password" id="inputPassword" class="border-2 rounded shadow border-gray-700 p-2" required>
        </div>
        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        <div class="text-center mb-3">
            <input type="checkbox" name="_remember_me">
            <label for="_remember_me" class="font-semibold text-lg mx-4">Mantener sesión iniciada en este equipo</label>
        </div>

        <div class="text-center mb-3">
            ¿No tiene una cuenta?
            <a href="{{ path('app_register') }}" class="text-blue-400 font-bold">
                Regístrese aquí
            </a>
        </div>

        <div class="w-full text-center">
            <button class="p-4 border rounded shadow bg-blue-300" type="submit">
                Identificarse
            </button>
        </div>
    </form>
</div>

{% endblock %}
