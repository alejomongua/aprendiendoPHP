<form method="post" action="{{ path('proyecto_delete', {'id': proyecto.id}) }}" onsubmit="return confirm('¿Está seguro que quiere abortar este proyecto?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ proyecto.id) }}">
    <button class="my-4 p-4 border rounded shadow bg-red-300">Abortar proyecto</button>
</form>
