{% extends 'base.html.twig' %}

{% block title %}Proyecto index{% endblock %}

{% block body %}
    <h1>Proyecto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Estado</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for proyecto in proyectos %}
            <tr>
                <td>{{ proyecto.id }}</td>
                <td>{{ proyecto.inicio ? proyecto.inicio|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ proyecto.fin ? proyecto.fin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ proyecto.estado }}</td>
                <td>{{ proyecto.descripcion }}</td>
                <td>
                    <a href="{{ path('proyecto_show', {'id': proyecto.id}) }}">show</a>
                    <a href="{{ path('proyecto_edit', {'id': proyecto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('proyecto_new') }}">Create new</a>
{% endblock %}
