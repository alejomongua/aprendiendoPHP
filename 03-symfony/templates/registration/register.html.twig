{% extends 'base.html.twig' %}

{% block title %}Registrarse{% endblock %}

{% block body %}
<div class="w-full md:w-3/4 lg:w-1/2 xl:w-1/3 mx-auto my-10">
    <h1 class="text-2xl leading-10 text-green-900">
        Registrarse
    </h1>

    <div class="py-4 px-10 border bg-green-100 border-green-900 rounded shadow my-4">
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Contrase√±a'
            }) }}
            <div class="mt-4">
                {{ form_row(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="my-4 p-4 border rounded shadow bg-blue-300">
                Registrarse
            </button>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
